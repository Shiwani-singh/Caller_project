<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.title || 'Error' %> - Call Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body text-center p-5">
            <div class="mb-4">
              <% if (locals.error && locals.error.status === 404) { %>
                <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
              <% } else if (locals.error && locals.error.status >= 500) { %>
                <i class="fas fa-bug fa-4x text-danger"></i>
              <% } else if (locals.error && locals.error.status >= 400) { %>
                <i class="fas fa-exclamation-circle fa-4x text-warning"></i>
              <% } else { %>
                <i class="fas fa-info-circle fa-4x text-info"></i>
              <% } %>
            </div>
            
            <h1 class="h3 mb-3">
              <% if (locals.error && locals.error.status) { %>
                <%= locals.error.status %>
              <% } %>
              <%= locals.title || 'Error' %>
            </h1>
            
            <p class="text-muted mb-4">
              <%= locals.message || 'Something went wrong. Please try again.' %>
            </p>
            
            <% if (locals.error && locals.error.stack && process.env.NODE_ENV === 'development') { %>
              <div class="alert alert-danger text-start">
                <h6>Stack Trace (Development Only):</h6>
                <pre class="mb-0"><code><%= locals.error.stack %></code></pre>
              </div>
            <% } %>
            
            <div class="d-grid gap-2 d-md-block">
              <button onclick="goBack()" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Go Back
              </button>
              <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-home me-2"></i>Home
              </a>
            </div>
            
            <% if (locals.error && locals.error.status === 404) { %>
              <div class="mt-4">
                <p class="text-muted small">
                  If you believe this is an error, please contact support.
                </p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function goBack() {
      // Try to go back in history, if not possible go to home
      if (document.referrer && document.referrer !== window.location.href) {
        window.history.back();
      } else {
        window.location.href = '/';
      }
    }
  </script>
</body>
</html>


